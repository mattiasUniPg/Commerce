@model IEnumerable<ClientiViewModel>

@{
    ViewBag.Title = "Clienti Index";
}

<h1 class="display-4">Lista Clienti</h1>

<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(model => model.IdCliente)</th>
        <th>@Html.DisplayNameFor(model => model.Nome)</th>
        <th>@Html.DisplayNameFor(model => model.Cognome)</th>
        <th>@Html.DisplayNameFor(model => model.DataNascita)</th>
         <th>@Html.DisplayNameFor(model => model.CF)</th>
         <th>@Html.DisplayNameFor(model => model.Paese)</th>
        <th>@Html.DisplayNameFor(model => model.Email)</th>
    </tr>
    @if (Model != null && Model.Any())
    {
        foreach (var cliente in Model)
        {
            <tr>
                <td>@cliente.IdCliente</td>
                <td>@cliente.Nome</td>
                <td>@cliente.Cognome</td>
                <td>@cliente.DataNascita</td>
                <td>@cliente.CF</td>
                <td>@cliente.Paese</td>
                <td>@cliente.Email</td>
                <td>
                    @Html.ActionLink("Modifica cliente","Modifica",new {IdCliente = cliente.IdCliente})|
                </td>
            </tr>
        }
    }
    else
    {
        <tr>
            <td colspan="5" class="text-center"> Nessun cliente disponibile</td>
        </tr>
    }

    <p class="text-right">@Html.ActionLink("Torna pagina iniziale","Index") </p>
</table>